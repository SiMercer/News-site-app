{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles, queries 'sort_by' and/or 'order' can be included",
    "queries": [
      [
        "sort_by",
        "article_id",
        "title",
        "topic",
        "author",
        "created_at",
        "votes"
      ],
      ["order", "asc", "desc"]
    ],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves an article by ID",
    "queries": [],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700"
        }
      ]
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "increases or decreases an articles vote value by number, 'inc_votes' in body ",
    "queries": [],
    "body": {
      "inc_votes": -10
    },
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": -10,
          "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700"
        }
      ]
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves an array of all comments associated with an article_id",
    "queries": [],
    "exampleResponse": {
      "articles": [
        {
          "comment_id": 1,
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "article_id": 0
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "post new comment to article",
    "queries": [],
    "body": {
      "username": "string",
      "body": "string"
    },
    "exampleResponse": {
      "articles": [
        {
          "comment_id": 1,
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
